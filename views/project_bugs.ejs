<link rel="stylesheet" href="/css/project_bugs.css">
<div id="projects">
    <ul>
        <% for(let project of all_projects ){ %>
            <li>

                <a href="/users/destroy/<%= project.id %>">X</a>

                <div class="ProNamecss">
                   Project Name - <%= project.ProjectName %>
                </div>

                <div class="Desccss">
                   Description - <%= project.Description %>
                   
                </div>

                <div class="AuthorNamecss">
                   Author - <%= project.Author %>
                </div>
             
                <h2>Create Bug Issue</h2>
                <div class="bodyPro">

                    <div class="newPro">
                        <form  action="/show/addToBug"  method="post">
                            

                                <label class="PName"> Title</label>
                                <input type="text" name="title" placeholder="Title" required>
                          
                          
                           
                                <label class="Desc">Description</label>
                                <input type="text" name="Description" placeholder="Description" required>
                            
                          
                            
                                <label class="AName">Author </label>
                                <input type="text" name="Author" placeholder="Author" required>
                            
                
                            <input type="hidden" name="project" value="<%= project._id %>">


                           <input class="btn" type="submit" value="Create Issue">
                        </form>
                        
                   </div>
                  
                
                </div>
                
                    <ul>
                       <% for(Bug of project.bug){ %>
                        <li>
                               
                                title  <%= Bug.title %> <br>
                                Description  <%= Bug.Description %> <br>
                                Author  <%= Bug.Author %>
                                <a href="/show/destroy/<%= Bug._id %>">X</a>

                            
                        </li>
                        <% } %>
                    </ul>

                <!-- <a href="/show/bugform">Create Issue</a> -->


            </li>
        <% } %>
    </ul>
  
</div>